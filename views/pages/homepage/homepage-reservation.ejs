<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head', {page: 'homepage-reservation' }) %>
</head>

<body>
  <!-- header  -->
  <%- include('./partials/header')%>
    <div id="main">
      <div class="background-layer"></div>
      <div class="main-content">
        <h2> Chọn giờ đặt </h2>
        <form class="main-content-form" action="/reservation" method="post">
          <div class="main-content-form-input">
            <input class="date" type="date" name="date">
            <input type="time" list="reservation-time-option" name="reservationTime" />
            <datalist id="reservation-time-option">
              <option value="07:00"></option>
              <option value="07:30"></option>
              <option value="08:00"></option>
              <option value="08:30"></option>
              <option value="09:00"></option>
              <option value="09:30"></option>
              <option value="10:00"></option>
              <option value="10:30"></option>
              <option value="11:00"></option>
              <option value="11:30"></option>
              <option value="12:00"></option>
              <option value="12:30"></option>
              <option value="13:00"></option>
              <option value="13:30"></option>
              <option value="14:00"></option>
            </datalist>
            <input class="number-person" type="text" list="number-person-option" name="numberOfPerson" />
            <datalist id="number-person-option">
              <option value="2">2 người</option>
              <option value="4">4 người</option>
              <option value="8">8 người</option>
            </datalist>
          </div>
          <button id="make-reservation" type="submit"> Đặt bàn </button>
        </form>
      </div>
    </div>

    <% if (withModal===true) { %>
      <%- include('./reservation-modal') %>
        <% } %>

          <!-- footer  -->
          <script type="module" src="js/homepage-reservation.js"></script>
          <%- include('./partials/footer') %>
            <!-- author  -->
            <%- include('./partials/author') %>
</body>

</html>