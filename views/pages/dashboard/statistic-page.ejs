  <script>
    const ctx = document.getElementById('bar-chart');

    new Chart(ctx, {
      type: 'bar',
      data: {
        labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
        datasets: [{
          label: '# of Votes',
          data: [12, 19, 3, 5, 2, 3],
          borderWidth: 1
        }]
      },
      options: {
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });

    // For line chart
    const lineChartElement = document.getElementById('line-chart')
    const labels = "Hello"
    const data = {
      labels: labels,
      datasets: [{
          label: 'My First Dataset',
          data: [65, 59, 80, 81, 56, 55, 40],
          fill: false,
          borderColor: 'rgb(75, 192, 192)',
          tension: 0.1
        },
        {
          label: 'My Second Dataset',
          data: [33, 77, 82, 112, 60, 55, 65],
          fill: false,
          borderColor: 'rgb(255, 99, 132)',
          tension: 0.1
        }
      ]
    };
    const config = {
      type: 'line',
      data: data,
    };
    new Chart(lineChartElement, config);

    // For donut chart

    const donutChartElement = document.getElementById("donut-chart")

    const dataDonutChart = {
      labels: [
        'Red',
        'Blue',
        'Yellow'
      ],
      datasets: [{
        label: 'My First Dataset',
        data: [20, 50, 100],
        backgroundColor: [
          'rgb(255, 99, 132)',
          'rgb(54, 162, 235)',
          'rgb(255, 205, 86)'
        ],
        hoverOffset: 4
      }]
    };

    const configDonutChart = {
      type: 'doughnut',
      data: dataDonutChart,
    };

    new Chart(donutChartElement, configDonutChart);
  </script>

